<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#5bbd00</item>
        <item name="colorPrimaryDark">#5bbd00</item>
        <item name="colorAccent">#000</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeRedCake" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EC407A</item>
        <item name="colorPrimaryDark">#EC407A</item>
        <item name="colorAccent">#000000</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- creamos un nuevo estilo con el siguiente cÃ³digo , hacemos el llamado del xml (splashcreen) -->
    <style name="splashScreenTheme" parent="@style/AppThemeSplash">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="toolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="titleTextColor">#ffffff</item>
    </style>

    <style name="popupThemeBlack" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#000</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Used for the background -->
        <item name="android:background">#000</item>

    </style>

    <style name="popupThemeGreen" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#5bbd00</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#fff</item>
        <!-- Used for the background -->
        <item name="android:background">#5bbd00</item>

    </style>

    <style name="popupThemePink" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#EC407A</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#fff</item>
        <!-- Used for the background -->
        <item name="android:background">#EC407A</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAlertDialogData" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#5bbd00</item>
    </style>

    <style name="ThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorPrimary">#000</item>
        <item name="fontFamily">@font/futura</item>
    </style>

    <style name="toastTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/futura</item>
    </style>

</resources>