<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".paquetes.Productos.Default.DetalleProductoDefault">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="4dp"
            app:shape_arc_cropDirection="outside"
            app:shape_arc_height="20dp"
            app:shape_arc_position="bottom">

            <View
                android:layout_width="match_parent"
                android:background="#EC407A"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Detalle de Producto"
                    android:layout_marginTop="40dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/futura"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="8dp"
                android:padding="5dp"
                android:layout_marginTop="60dp"
                android:layout_height="wrap_content">


            </RelativeLayout>


        </com.github.florent37.shapeofview.shapes.ArcView>

        <com.github.florent37.shapeofview.shapes.CircleView
            android:layout_width="100dp"
            app:shape_circle_borderColor="#A2A2A2"
            android:layout_gravity="center"
            android:elevation="16dp"
            android:layout_marginTop="-50dp"
            app:shape_circle_borderWidth="3dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="match_parent"
                android:background="#fff"
                android:src="@drawable/lista_proveedor"
                android:layout_height="match_parent"/>
        </com.github.florent37.shapeofview.shapes.CircleView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/scroll">
                <GridLayout
                    android:columnCount="1"
                    android:columnOrderPreserved="false"
                    android:rowCount="2"
                    android:padding="8dp"
                    android:alignmentMode="alignMargins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Datos del producto"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/futura"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="32dp"
                        android:layout_margin="8dp"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:src="@drawable/comida_producto"
                                    android:layout_height="40dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="Nombre del producto : "
                                    android:layout_gravity="center"
                                    android:textSize="16sp"
                                    android:textColor="#000"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/detalleNombreProducto"
                                    android:layout_width="wrap_content"
                                    android:textColor="#2d572c"
                                    android:textSize="20sp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearCliente"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:src="@drawable/stockproduc"
                                    android:layout_height="40dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Stock :"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="#000"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="15dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/detalleStock"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="#000"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearTelefono"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:src="@drawable/descripcionproducto"
                                    android:layout_height="40dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Descripción : "
                                    android:textSize="16sp"
                                    android:textColor="#000"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/detalleTelefonoCliente"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="#FF0000"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:src="@drawable/contenidoproducto"
                                    android:layout_height="40dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Contenido : "
                                    android:layout_marginTop="8dp"
                                    android:textSize="16sp"
                                    android:layout_marginLeft="15dp"
                                    android:textColor="#000"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/detalleContenido"
                                    android:layout_width="wrap_content"
                                    android:textColor="#2d572c"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:src="@drawable/embalaje"
                                    android:layout_height="40dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Embalaje :"
                                    android:textSize="16sp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/detalleTotalCobro"
                                    android:layout_width="wrap_content"
                                    android:textColor="#2d572c"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:src="@drawable/codigo"
                                    android:layout_height="40dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Código : "
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="15dp"
                                    android:textColor="#000"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/detalleVuelto"
                                    android:layout_width="wrap_content"
                                    android:textColor="#2d572c"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="0dp"
                                android:layout_height="0dp">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:src="@drawable/repartidor"
                                    android:layout_height="40dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Repartidor asignado :"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/futura"
                                    android:textColor="#000"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/detallevRepartidor"
                                    android:layout_width="wrap_content"
                                    android:textColor="#000"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="15dp"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/pathPhoto"
                                android:visibility="invisible"
                                android:layout_height="0dp"
                                />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:elevation="6dp"
                                android:padding="8dp"
                                android:gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="bottom|center"
                                android:layout_height="wrap_content">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:text="Editar Producto"
                                    android:background="@drawable/redondo"
                                    android:backgroundTint="@drawable/btn_background_verde"
                                    android:id="@+id/showProducto"
                                    android:gravity="center"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    android:textColor="#fff"
                                    android:layout_height="wrap_content"/>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:text="Otro"
                                    android:layout_weight="1"
                                    android:background="@drawable/redondo"
                                    android:backgroundTint="@drawable/btn_background_verde"
                                    android:id="@+id/showMapa"
                                    android:fontFamily="@font/futura"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#fff"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </ScrollView>
        </LinearLayout>

    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>